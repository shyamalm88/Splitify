{
  "expo": {
    "name": "Splitify",
    "slug": "splitify",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.shyamalm88.splitify",
      "googleServicesFile": "./GoogleService-Info.plist",
      "config": {
        "firebase": {
          "appId": "1:1234567890:ios:321abc456def7890"
        }
      },
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "NSCameraUsageDescription": "This app needs access to the camera to scan QR codes",
        "NSPhotoLibraryUsageDescription": "This app needs access to photos for profile pictures",
        "NSMicrophoneUsageDescription": "This app needs access to the microphone for voice notes"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.shyamalm88.splitify",
      "googleServicesFile": "./google-services.json",
      "config": {
        "firebase": {
          "appId": "1:1234567890:android:321abc456def7890"
        }
      },
      "permissions": [
        "NOTIFICATIONS",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "firebase": {
        "appId": "1:1234567890:web:321abc456def7890",
        "apiKey": "AIzaSyC1xLhbGBeg7pCJNM-ON5aMCT_1RY5560I",
        "authDomain": "splitify-cd256.firebaseapp.com",
        "projectId": "splitify-cd256",
        "storageBucket": "splitify-cd256.firebasestorage.app",
        "messagingSenderId": "1056124364476"
      }
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff",
          "sounds": [
            "./assets/notification-sound.wav"
          ],
          "mode": "production",
          "androidMode": "default",
          "androidCollapsedTitle": "Splitify",
          "iosDisplayInForeground": true
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "1056124364476"
      }
    }
  }
}